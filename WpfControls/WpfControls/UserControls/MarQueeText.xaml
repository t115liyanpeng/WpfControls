<UserControl x:Class="WpfControls.UserControls.MarqueeText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <ScrollViewer  HorizontalContentAlignment="Center" CanContentScroll="True" x:Name="Body" Width="300" Height="30" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
<StackPanel  HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"  TextWrapping="NoWrap" TextAlignment="Center" Name="Block" Height="30">
           <TextBlock.RenderTransform>
             <TranslateTransform X="0"></TranslateTransform>
           </TextBlock.RenderTransform>
        </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
